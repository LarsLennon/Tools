    <div class="container">
        <main role="main" class="pb-3">

            @if (TempData["Message-Content"] != null)
            {
                <div class="alert alert-dismissible fade in alert-@TempData["Message-Type"]" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>@Html.Raw(TempData["Message-Content"])</strong>
