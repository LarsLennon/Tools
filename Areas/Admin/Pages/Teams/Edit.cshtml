@page
@model ToolSmukfest.Areas.Admin.Pages.Teams.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.TeamId" />
            <div class="form-group">
                <label asp-for="Team.Name" class="control-label"></label>
                <input asp-for="Team.Name" class="form-control" />
                <span asp-validation-for="Team.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.Number" class="control-label"></label>
                <input asp-for="Team.Number" class="form-control" />
                <span asp-validation-for="Team.Number" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Team.IsGroup" /> @Html.DisplayNameFor(model => model.Team.IsGroup)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Team.LastSynchronization" class="control-label"></label>
                <input asp-for="Team.LastSynchronization" class="form-control" />
                <span asp-validation-for="Team.LastSynchronization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.ParentId" class="control-label"></label>
                <select asp-for="Team.ParentId" class="form-control" asp-items="ViewBag.ParentId"></select>
                <span asp-validation-for="Team.ParentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
