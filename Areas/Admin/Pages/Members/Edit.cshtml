@page
@model ToolSmukfest.Areas.Admin.Pages.Members.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.MemberId" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Member.VirtualMember" /> @Html.DisplayNameFor(model => model.Member.VirtualMember)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Member.CurrentSectionId" class="control-label"></label>
                <input asp-for="Member.CurrentSectionId" class="form-control" />
                <span asp-validation-for="Member.CurrentSectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.MembaNumber" class="control-label"></label>
                <input asp-for="Member.MembaNumber" class="form-control" />
                <span asp-validation-for="Member.MembaNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Birthday" class="control-label"></label>
                <input asp-for="Member.Birthday" class="form-control" />
                <span asp-validation-for="Member.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Name" class="control-label"></label>
                <input asp-for="Member.Name" class="form-control" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Email" class="control-label"></label>
                <input asp-for="Member.Email" class="form-control" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.EmailAlternate" class="control-label"></label>
                <input asp-for="Member.EmailAlternate" class="form-control" />
                <span asp-validation-for="Member.EmailAlternate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
