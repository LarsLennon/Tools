@page
@model ToolSmukfest.Areas.Admin.Pages.ItemTypes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ItemType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemType.Title" class="control-label"></label>
                <input asp-for="ItemType.Title" class="form-control" />
                <span asp-validation-for="ItemType.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemType.ShortTitle" class="control-label"></label>
                <input asp-for="ItemType.ShortTitle" class="form-control" />
                <span asp-validation-for="ItemType.ShortTitle" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ItemType.ExternalSupplier" /> @Html.DisplayNameFor(model => model.ItemType.ExternalSupplier)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ItemType.Price" class="control-label"></label>
                <input asp-for="ItemType.Price" class="form-control" />
                <span asp-validation-for="ItemType.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemType.PricePeriodUnit" class="control-label"></label>
                <select asp-for="ItemType.PricePeriodUnit" class="form-control" asp-items="ViewBag.PricePerUnit"></select>
                <span asp-validation-for="ItemType.PricePeriodUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemType.SectionId" class="control-label"></label>
                <select asp-for="ItemType.SectionId" class="form-control" asp-items="ViewBag.SectionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ItemType.ItemTypeCategoryId" class="control-label"></label>
                <select asp-for="ItemType.ItemTypeCategoryId" class="form-control" asp-items="ViewBag.ItemTypeCategoryId">None</select>
            </div>
            <div class="form-group">
                <label asp-for="ItemType.ItemSupplierId" class="control-label"></label>
                <select asp-for="ItemType.ItemSupplierId" class="form-control" asp-items="ViewBag.ItemSupplierId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-sectionId="@ViewBag.SectionId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
